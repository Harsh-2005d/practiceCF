generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Solve {
  id        String   @id
  userId    String
  contestId Int
  index     String
  link      String
  solvedAt  DateTime
  User      User     @relation(fields: [userId], references: [id])

  @@unique([userId, contestId, index])
}

model User {
  id           String   @id
  email        String   @unique
  passwordHash String
  handle       String   @unique
  rating       Int?
  createdAt    DateTime @default(now())
  Solve        Solve[]
}
